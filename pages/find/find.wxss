/* pages/find/find.wxss */

.wrapper{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

nav{
  width:100%;
  height:90rpx;
  display: flex;
}

nav view{
  flex:1;
  height:90rpx;
  text-align: center;
  line-height: 90rpx;
  color:#666;
  border-bottom:4rpx solid #666;
  box-sizing: border-box;
}
.nav-active{
  color:deeppink;
  border-bottom: 4rpx solid deeppink;
}


.swiper-box{
  margin-top: 2rpx;
  width:100%;
  flex:1;
  background: #f4f4f4;
  overflow: auto;
}

.swiper-box swiper{
  height: 100%;
  overflow: auto;
}


.scroll{
  overflow-y: scroll;
  height:100%;
  padding-bottom: 30px;
}